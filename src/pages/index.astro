---
import "../styles/global.css";
import Header from "../components/Header.astro";
import { ClientRouter } from "astro:transitions";
import SEO from "../components/SEO.astro";
import Footer from "../components/Footer.astro";
import Hero from "../components/Hero.astro";
import Summary from "../components/Summary.astro";
import Experience from "../components/Experience.astro";
import Projects from "../components/Projects.astro";
import Blog from "../components/Blog.astro";
---

<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/png" href="/favicon.png" />

		<SEO
			title="Atharva | Portfolio"
			description="Portfolio and blog of Atharva Jadhav â€” Software Engineer sharing projects, learnings, and experiences."
			canonical={new URL(Astro.url.pathname, Astro.site)}
			image={`${Astro.site}/og/default.png`}
			type="website"
		/>

		<ClientRouter />
	</head>

	<body>
		<!-- Header -->
		<Header active="home" />

		<main class="container">
			<!-- Hero -->
			<Hero />

			<!-- Professional Summary -->
			<Summary />

			<!-- Experience -->
			<Experience />

			<!-- Projects -->
			<Projects />

			<!-- Blogs -->
			<Blog />
		</main>

		<!-- Footer -->
		<Footer />
	</body>
</html>
