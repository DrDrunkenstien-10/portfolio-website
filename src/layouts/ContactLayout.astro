---
import "../styles/global.css";
import "../styles/markdown.css";
import { ClientRouter } from "astro:transitions";

const { title: pageTitle } = Astro.props;
const title = pageTitle ?? "Contact";
---

<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>{title ? `${title} | Atharva Jadhav` : "Atharva Jadhav"}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/png" href="/favicon.png" />
        <ClientRouter />
    </head>

    <body>
        <!-- Header -->
        <header id="site-header">
            <div class="header-container">
                <a href="/" class="logo">Atharva<span class="accent">.</span></a
                >
                <nav class="nav-links">
                    <a href="/blog">Blog</a>
                    <a href="/#experience">Experience</a>
                    <a href="/#projects">Projects</a>
                    <a href="/contact">Contact</a>
                </nav>
            </div>
        </header>

        <main class="contact-container">
            <h1 class="contact-title">{title}</h1>
            <slot />
        </main>

        <!-- Footer -->
        <footer id="footer">
            <div class="footer-icons">
                <a
                    href="https://www.linkedin.com/in/atharva-jadhav-491235243/"
                    target="_blank"
                    aria-label="LinkedIn"
                    class="footer-icon"
                >
                    <img src="/icons/LinkedIn.svg" alt="LinkedIn" />
                </a>
                <a
                    href="https://github.com/DrDrunkenstien-10"
                    target="_blank"
                    aria-label="GitHub"
                    class="footer-icon"
                >
                    <img src="/icons/Github.svg" alt="GitHub" />
                </a>
                <a
                    href="mailto:atharvakamalakarjadhadh@gmail.com"
                    aria-label="Email"
                    class="footer-icon"
                >
                    <img src="/icons/Gmail.svg" alt="Email" />
                </a>
            </div>
            <p class="footer-text">
                <strong>Â© 2025 Atharva Jadhav. All rights reserved.</strong>
            </p>
        </footer>
    </body>
</html>

<style>
    /* PAGE */
    .contact-container {
        max-width: 800px;
        margin: 4rem auto 2rem;
        padding: 0 1.2rem;
    }

    .contact-title {
        font-size: 2.3rem;
        margin: 3rem 0 2rem;
        font-weight: 700;
        color: var(--text-color, #fff);
    }
</style>
