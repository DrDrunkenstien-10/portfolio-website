---
import data from "../data/experience.json";
const experience = data.experiences[0];
---

<section id="experience">
    <h2>Experience</h2>

    <div class="experience-card">
        <!-- Header -->
        <div class="experience-header">
            <div class="experience-org">
                <a
                    href={experience.organization.url}
                    target="_blank"
                    rel="noopener"
                    class="org-link"
                >
                    <span class="org-name">{experience.organization.name}</span>
                </a>
            </div>

            <div class="experience-meta">
                <span class="experience-duration"
                    ><strong>{experience.duration}</strong></span
                >
                <span class="experience-location"
                    ><strong>{experience.location}</strong></span
                >
            </div>
        </div>

        <!-- Bullet points -->
        <ul class="experience-points">
            {experience.points.map((point) => <li set:html={point} />)}
        </ul>

        <!-- Tech stack -->
        <div class="experience-tech">
            <div class="tech-heading">
                <span class="tech-heading-text">Tech Stack</span>
            </div>

            <div class="tech-icons">
                {
                    experience.tech.map((item) => (
                        <a
                            class="tech-item"
                            data-label={item.name}
                            href={item.link}
                            target="_blank"
                        >
                            <img src={item.icon} alt={item.name} />
                        </a>
                    ))
                }
            </div>
        </div>
    </div>
</section>

<style>
    #experience {
        padding-top: 1.5rem;
    }

    .experience-card {
        background: var(--color-box-bg);
        border: 1px solid var(--color-border);
        border-radius: 8px;
        padding: 1.75rem;
        transition:
            transform 0.2s ease,
            border-color 0.2s ease;
    }
    .experience-card:hover {
        transform: translateY(-2px);
        border-color: var(--color-accent);
    }

    /* Header layout */
    .experience-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        gap: 1rem;
        margin-bottom: 1.25rem;
    }
    .org-link {
        display: flex;
        align-items: center;
        gap: 0.6rem;
        font-weight: 700;
    }
    .org-logo {
        width: 26px;
        height: 26px;
        object-fit: contain;
    }
    .org-name {
        font-size: 1.2rem;
    }
    .experience-meta {
        text-align: right;
        font-size: 0.95rem;
        opacity: 0.9;
    }
    .experience-location {
        display: block;
        margin-top: 0.2rem;
    }

    /* Bullet points */
    .experience-points {
        padding-left: 1.25rem;
        margin-bottom: 1.25rem;
    }
    .experience-points li {
        margin-bottom: 0.75rem;
    }

    /* Tech Stack */
    .tech-heading {
        margin-top: 0.5rem;
    }
    .tech-heading-text {
        font-size: 1.3rem;
        font-weight: 600;
        color: var(--color-accent);
        opacity: 0.95;
    }
    .experience-tech {
        display: flex;
        flex-direction: column;
        gap: 0.6rem;
    }
    .tech-label {
        font-size: 0.95rem;
        opacity: 0.8;
    }
    .tech-icons {
        display: flex;
        flex-wrap: wrap;
        gap: 0.85rem 1.1rem;
    }
    .tech-icons img {
        width: 24px;
        height: 24px;
        opacity: 0.9;
        transition:
            transform 0.2s ease,
            opacity 0.2s ease;
    }
    .tech-icons img:hover {
        transform: scale(1.1);
        opacity: 1;
        filter: drop-shadow(0 0 6px rgba(0, 255, 144, 0.35));
    }
    .tech-item {
        position: relative;
        display: inline-flex;
    }

    /* Tooltip */
    .tech-item::after {
        content: attr(data-label);
        position: absolute;
        bottom: 135%;
        left: 50%;
        transform: translateX(-50%) scale(0.95);
        background: #000;
        color: #fff;
        padding: 0.3rem 0.5rem;
        font-size: 0.8rem;
        font-weight: 700;
        border-radius: 4px;
        white-space: nowrap;
        opacity: 0;
        pointer-events: none;
        transition:
            opacity 0.15s ease,
            transform 0.15s ease;
    }
    .tech-item::before {
        content: "";
        position: absolute;
        bottom: 115%;
        left: 50%;
        transform: translateX(-50%);
        border-width: 4px;
        border-style: solid;
        border-color: #000 transparent transparent transparent;
        opacity: 0;
        transition: opacity 0.15s ease;
    }
    .tech-item:hover img {
        transform: scale(1.12);
        opacity: 1;
    }
    .tech-item:hover::after {
        opacity: 1;
        transform: translateX(-50%) scale(1);
    }
    .tech-item:hover::before {
        opacity: 1;
    }

    /* Responsive */
    @media (max-width: 600px) {
        .experience-header {
            flex-direction: column;
            align-items: flex-start;
        }
        .experience-meta {
            text-align: left;
        }
        .tech-heading-text {
            font-size: 1.05rem;
        }
        .tech-item::after,
        .tech-item::before {
            display: none;
        }
    }
</style>
