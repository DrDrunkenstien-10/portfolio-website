---
import projects from "../data/projects.json";
---

<section id="projects">
  <h2>Projects</h2>
  <div class="projects-grid">
    {projects.map(project => (
      <div class="project-card">

        <!-- Header -->
        <div class="project-header">
          <h3 class="project-title">{project.title}</h3>

          <div class="project-links">
            {project.github && (
              <a href={project.github} target="_blank" aria-label="GitHub">
                <img src="/icons/Github.svg" alt="GitHub" />
              </a>
            )}

            {project.live && (
              <a href={project.live} target="_blank" aria-label="Live Demo">
                <img src="/icons/Link.png" alt="Live Demo" />
              </a>
            )}
          </div>
        </div>

        <!-- Description -->
        <p class="project-description">
          {project.description}
        </p>

        <!-- Technologies -->
        <div class="project-tech">
          <span class="tech-label">Technologies</span>

          <div class="tech-icons">
            {project.tech.map(tech => (
              <a
                href={tech.link}
                target="_blank"
                class="tech-item"
                data-label={tech.name}
              >
                <img src={tech.icon} alt={tech.name} />
              </a>
            ))}
          </div>
        </div>

      </div>
    ))}
  </div>
</section>

<style>
    .projects-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem;
    }

    .project-card {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        background: #1a1c25;
        border: 1px solid #333;
        border-radius: 12px;
        padding: 1.4rem;
        transition:
            transform 0.2s ease,
            border-color 0.2s ease;
    }

    .project-card:hover {
        transform: translateY(-4px);
        border-color: #00ff90;
    }

    .project-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        gap: 1rem;
    }

    .project-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: #fff;
        line-height: 1.3;
    }

    .project-links {
        display: flex;
        gap: 0.6rem;
    }

    .project-links img {
        width: 18px;
        height: 18px;
        opacity: 0.85;
        transition:
            transform 0.15s ease,
            opacity 0.15s ease;
    }

    .project-links img:hover {
        transform: scale(1.15);
        opacity: 1;
        filter: drop-shadow(0 0 6px rgba(0, 255, 144, 0.4));
    }

    .project-description {
        font-size: 1rem;
        opacity: 0.9;
    }

    .project-tech {
        margin-top: auto;
        display: flex;
        flex-direction: column;
        gap: 0.6rem;
        padding-top: 0.75rem;
        border-top: 1px solid rgba(255, 255, 255, 0.08);
    }

    .project-tech .tech-label {
        font-size: 0.9rem;
        font-weight: 700;
        letter-spacing: 0.4px;
        color: #00ff90;
        opacity: 0.95;
    }

    /* Icons */
    .tech-icons {
        display: flex;
        flex-wrap: wrap;
        gap: 0.85rem 1.1rem;
    }

    .tech-icons img {
        width: 24px;
        height: 24px;
        opacity: 0.9;
        transition:
            transform 0.2s ease,
            opacity 0.2s ease;
    }

    .tech-icons img:hover {
        transform: scale(1.1);
        opacity: 1;
        filter: drop-shadow(0 0 6px rgba(0, 255, 144, 0.35));
        cursor: pointer;
    }

    .tech-item {
        position: relative;
        display: inline-flex;
    }

    .tech-item::after {
        content: attr(data-label);
        position: absolute;
        bottom: 135%;
        left: 50%;
        transform: translateX(-50%) scale(0.95);
        background: #000;
        color: #fff;
        padding: 0.3rem 0.5rem;
        font-size: 0.8rem;
        font-weight: 700;
        border-radius: 4px;
        white-space: nowrap;
        opacity: 0;
        pointer-events: none;
        transition:
            opacity 0.15s ease,
            transform 0.15s ease;
    }

    .tech-item::before {
        content: "";
        position: absolute;
        bottom: 115%;
        left: 50%;
        transform: translateX(-50%);
        border-width: 4px;
        border-style: solid;
        border-color: #000 transparent transparent transparent;
        opacity: 0;
        transition: opacity 0.15s ease;
    }

    .tech-item:hover img {
        transform: scale(1.12);
        opacity: 1;
    }

    .tech-item:hover::after {
        opacity: 1;
        transform: translateX(-50%) scale(1);
    }

    .tech-item:hover::before {
        opacity: 1;
    }

    /* Responsive */
    @media (max-width: 600px) {
        .projects-grid {
            grid-template-columns: 1fr;
        }

        .contact-inner {
            flex-direction: column;
            gap: 0.75rem;
        }
    }
</style>
