---
// Optional: You can accept props here if needed later (like active link)
const { active } = Astro.props;
---

<header id="site-header">
    <div class="header-container">
        <a href="/" class="logo">
            Atharva<span class="accent">.</span>
        </a>

        <nav class="nav-links">
            <a href="/blog" class={active === "blog" ? "active" : ""}>Blog</a>
            <a
                href="/#experience"
                class={active === "experience" ? "active" : ""}>Experience</a
            >
            <a href="/#projects" class={active === "projects" ? "active" : ""}
                >Projects</a
            >
            <a href="/contact" class={active === "contact" ? "active" : ""}
                >Contact</a
            >
        </nav>
    </div>
</header>

<style>
    #site-header {
        position: sticky;
        top: 0;
        z-index: 1000;
        backdrop-filter: blur(10px);
        background: rgba(10, 12, 18, 0.75);
        border-bottom: 1px solid var(--color-border);
    }

    .header-container {
        max-width: 1100px;
        margin: 0 auto;
        padding: 0.9rem 1.2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .logo {
        font-size: 1.5rem;
        font-weight: 800;
        letter-spacing: 0.04em;
        color: #ffffff;
        text-decoration: none;
    }

    .logo .accent {
        color: var(--color-accent);
    }

    .nav-links {
        display: flex;
        gap: 1.5rem;
    }

    .nav-links a {
        font-size: 0.95rem;
        font-weight: 700;
        letter-spacing: 0.06em;
        text-transform: uppercase;
        color: #d7dbe6;
        position: relative;
        text-decoration: none;
        padding: 0.2rem 0;
        transition: color 0.2s ease;
    }

    .nav-links a::after {
        content: "";
        position: absolute;
        left: 0;
        bottom: -6px;
        width: 100%;
        height: 2px;
        background: var(--color-accent);
        transform: scaleX(0);
        transform-origin: right;
        transition: transform 0.25s ease;
    }

    .nav-links a:hover::after {
        transform: scaleX(1);
        transform-origin: left;
    }

    .nav-links a:active,
    .nav-links a:focus-visible {
        color: #ffffff;
    }

    /* Responsive */
    @media (max-width: 600px) {
        .nav-links {
            width: 100%;
            justify-content: space-between;
        }

        .nav-links a {
            font-size: 0.75rem;
            letter-spacing: 0.08em;
        }

        .site-header {
            backdrop-filter: none;
            background: rgba(10, 12, 18, 0.95);
        }

        .header-container {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.5rem;
        }

        .logo {
            font-size: 1.25rem;
        }
    }
</style>
